<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/igmilk"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/milk1"/>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_milk"
            android:textColor="#000"
            android:text="Milo dầm trân châu"
            android:textSize="17sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_danhgiamilk"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="55dp"
            android:text="👜 999+ | 👍 10+"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_giamilk"
            android:textColor="#fff"
            android:layout_marginTop="75dp"
            android:text="13,000đ"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/ig_themmilk"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="250dp"
            android:src="@drawable/addmon"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </RelativeLayout>

</LinearLayout>