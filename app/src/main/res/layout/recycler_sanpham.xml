<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/duongvien"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="120dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_sanpham_1"
            android:src="@drawable/sanpham_1"
            android:layout_width="120dp"
            android:layout_height="120dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginLeft="5dp"
                android:id="@+id/name_sanpham"
                android:textSize="14sp"
                android:textColor="#000"
                android:text="Ngôi Sao ABCDEFGH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView

                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@drawable/store"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginLeft="5dp"
                android:id="@+id/addr_sanpham"
                android:textSize="12dp"
                android:text="22-26 Lê Thánh Tôn, Quận Hải Châu, Đà Nẵng "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="5dp"
                    android:textColor="#000"
                    android:id="@+id/gia_moi"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp"
                    android:text="1,000đ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/ic_baseline_add_circle_24"
                    android:layout_width="25dp"
                    android:layout_height="25dp"/>
            </LinearLayout>

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/gia_cu"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:text="1,000đ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>